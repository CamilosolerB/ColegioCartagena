                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body">
                                    <h1>Profesores del curso</h1>
                                    <% profesor.forEach( function(profesor){%>
                                        <div class="d-flex justify-content-between">
                                            <p><%=profesor.Nombremateria%>: <%=profesor.Nombreprofesor%> <%=profesor.Apellidoprofesor%></p>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                        <form>
                                            <label>Nombre del profesor</label>
                                            <select name='nombre' id="nombre" class="form-control">
                                            <% datas.forEach(function(data){%>
                                                <option value="<%=data.Codigoprofesor%>"><%=data.Nombreprofesor%> <%=data.Apellidoprofesor%></option>
                                            <% }) %>  
                                            </select>
                                            <label>Materia a asignar</label>
                                            <select name='materia' id="materia" class="form-control">
                                                <% materias.forEach(function(data){%>
                                                    <option value="<%=data.Idmateria%>"><%=data.Nombremateria%></option>
                                                <% }) %>  
                                                </select>
                                            <input type="hidden" name="curso" id="curso" value="<%=curso[0].idcurso %> ">
                                            <button class="btn btn-success" id="verprofesores" data-bs-toggle="tooltip" data-bs-placement="top" title="Agregar profesor a este curso" type="button">asignar profesor   <i class="fa-solid fa-address-card"></i></button>  
                                        </form>  
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="container">
                                <h1>Lista de estudiantes</h1>
                                <table class="table table-striped">
                                    <thead class="thead-dark">
                                        <th>Numero de documento</th>
                                        <th>Nombre</th>
                                        <th>Apellido</th>
                                        <th>Edad</th>
                                        <th>Telefono</th>
                                        <th>Direccion</th>
                                        <th>RH</th>
                                        <th>Fecha de nacimiento</th>
                                    </thead>
                                    <tbody>
                                        <% curso.forEach(function (curso){%>
                                            <tr>
                                                <td>
                                                    <%=curso.Documentoestudiante%>
                                                </td>
                                                <td>
                                                    <%=curso.Nombre%>
                                                </td>
                                                <td>
                                                    <%=curso.Apellido%>
                                                </td>
                                                <td>
                                                    <%=curso.Edad%>
                                                </td>
                                                <td>
                                                    <%=curso.Telefono%>
                                                </td>
                                                <td>
                                                    <%=curso.Direccion%>
                                                </td>
                                                <td>
                                                    <%=curso.TipoDeSangre%>
                                                </td>
                                                <td>
                                                    <%=curso.Fechanacimiento%>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of Main Content -->

                <!-- Footer -->
                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
